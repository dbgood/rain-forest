<h1>Products</h1>
<%= link_to "New Product", "/products/new" %>


<% @products.each do |product| %>
<p><%= link_to product.name, product_path(product) %></p>
<p><%= product.description %></p>
<p><%= product.price_in_cents %></p>
<p><%= @product.formatted_price %>, <%= @product.display_product_correct_price %></p>
<% end %>
